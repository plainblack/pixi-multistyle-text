{
  "compilerOptions": {
    "strict": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "module": "ES2015",
    "moduleResolution": "node",
    "removeComments": true,
    "sourceMap": true,
    "noImplicitAny": true,
    "outDir": "dist",
    "declaration": true,
    "pretty": true,
    "esModuleInterop": true
  },
  "exclude": ["node_modules", "dist", "bower_components"],
  "compileOnSave": true,
  "baseUrl": "."
}
